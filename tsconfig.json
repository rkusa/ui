{
  "extends": "@tsconfig/recommended/tsconfig.json",
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "noEmit": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve"
  },
  "exclude": [
    "node_modules",
    "src/pages/**",
    "src/**/*.test.ts",
    "src/**/*.test.tsx"
  ],
  "include": ["next-env.d.ts", "src/**/*.ts", "src/**/*.tsx"]
}
